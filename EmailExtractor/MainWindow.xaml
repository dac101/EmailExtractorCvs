<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:TeamExplorer="clr-namespace:Microsoft.TeamFoundation.Controls.WPF.TeamExplorer;assembly=Microsoft.TeamFoundation.Controls" xmlns:local="clr-namespace:EmailExtractor" x:Class="EmailExtractor.MainWindow"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="255*"/>
            <ColumnDefinition Width="262*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Select Folder" HorizontalAlignment="Left" Margin="158,81,0,0" VerticalAlignment="Top" Width="194" Click="Button_Click" Grid.ColumnSpan="2" Height="20"/>
        <RichTextBox x:Name="richtext" HorizontalAlignment="Left" Height="176" Margin="10,133,0,0" VerticalAlignment="Top" Width="497" Grid.ColumnSpan="2"
			Grid.Column="0" TextChanged="RichTextBox_TextChanged">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Label Content="Catch Media Email Extractor " HorizontalAlignment="Left" Margin="76,22,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="363" Height="40" FontSize="24"/>



    </Grid>
</Window>
